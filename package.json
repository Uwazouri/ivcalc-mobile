{
  "name": "ivcalc-mobile",
  "version": "0.0.1",
  "description": "Remake of LegendaryPKMN.net’s Pokémon Individual Value & Stat Calculator for simpler mobile ui.",
  "main": "index.js",
  "scripts": {
    "css:sass": "sass src/scss:tmp --style compressed --no-source-map",
    "css:autoprefixer": "postcss --no-map -u autoprefixer -r tmp/*.css",
    "css:build": "npm run css:sass && npm run css:autoprefixer",
    "css:watch": "onchange \"src/scss\" -- npm run css:build",
    "html:build": "posthtml -c posthtml.json",
    "html:watch": "onchange \"src/html\" -- npm run html:build",
    "js:build": "webpack --mode=production",
    "js:watch": "onchange \"src/js\" -- webpack --mode=development",
    "build": "npm run js:build & npm run html:build & npm run css:build",
    "pack": "node pack.files.js",
    "pack:watch": "onchange \"tmp\" -- npm run pack",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p css:watch html:watch js:watch pack:watch",
    "dev": "run-p build pack serve watch"
  },
  "author": "Uwazouri",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "htmlnano": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.7.7",
    "posthtml-modules": "^0.9.1",
    "sass": "^1.77.6",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "cssnano": "^7.0.4",
    "svgo": "^3.3.2"
  }
}
